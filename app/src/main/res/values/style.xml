<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelInfo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_001</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MarvelInfo.Title" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:padding">@dimen/standard_text_item</item>-->
    </style>

    <style name="Theme.MarvelInfo.LineText" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.MarvelInfo.Header">
        <item name="android:src">@drawable/ic_marvel_studios_2016_logo</item>
        <item name="android:height">@dimen/header_height</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">@dimen/header_width</item>
        <item name="android:layout_height">@dimen/header_height</item>
    </style>

    <style name="Theme.MarvelInfo.ImageItem" parent="Theme.MaterialComponents">
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/standard_image_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="Theme.MarvelInfo.contentImageRounder"  parent="Theme.MaterialComponents">
        <item name="cardCornerRadius">@dimen/standard_rounder</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/bg_border_white</item>
    </style>
</resources>