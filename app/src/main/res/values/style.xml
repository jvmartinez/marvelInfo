<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelInfo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_001</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MarvelInfo.Title" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <!--        <item name="android:padding">@dimen/standard_text_item</item>-->
    </style>

    <style name="Theme.MarvelInfo.LineText" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.MarvelInfo.DescriptionText" parent="Theme.MarvelInfo.LineText">
        <item name="android:lines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.MarvelInfo.Header">
        <item name="android:src">@drawable/ic_marvel_studios_2016_logo</item>
        <item name="android:height">@dimen/header_height</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">@dimen/header_width</item>
        <item name="android:layout_height">@dimen/header_height</item>
    </style>

    <style name="Theme.MarvelInfo.ImageItem" parent="Theme.MaterialComponents">
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/standard_image_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="Theme.MarvelInfo.contentImageRounder" parent="Theme.MaterialComponents">
        <item name="cardCornerRadius">@dimen/standard_rounder</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/bg_border_white</item>
    </style>

    <style name="Theme.MarvelInfo.TabLayoutInfo" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/red</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/red_secondary</item>
    </style>

    <style name="Theme.MarvelInfo.TabItemInfo">
        <item name="android:textSize">13sp</item>
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="Theme.MarvelInfo.Activity" parent="Theme.MaterialComponents">
        <item name="android:background">@drawable/background_with_gradient</item>
    </style>

    <style name="Theme.MarvelInfo.buttonToWeb" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_filter_drama_24</item>
        <item name="background">@drawable/primary_round</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/lblIrWeb</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="Theme.MarvelInfo.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/bg_border_red_search</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <item name="android:layout_margin">8dp</item>
        <item name="queryHint">@string/hint_search</item>
    </style>

</resources>